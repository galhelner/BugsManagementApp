<Window x:Class="BugsManagementApp.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BugsManagementApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CategoriesWindow" Height="450" Width="800" Background="AliceBlue">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Category Name: "/>
            <TextBox x:Name="CategoryNameTextBox" Width="150" Margin="0,0,10,0"/>
            <Label Content="Category Parent Name: "/>
            <Button x:Name="SelectCategoryButton" Content="Select Category" Width="150" Height="25" Margin="0,0,10,0"
        Click="TogglePopup_Click" />
            <Popup x:Name="TreeViewPopup" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=SelectCategoryButton}">
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5" Width="150">
                    <TreeView Name="TreeViewCategories" ItemsSource="{Binding}" SelectedItemChanged="TreeViewCategories_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding ChildCategories}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Border>
            </Popup>
            <Button Name="BtnAddCategory" Content="Add Category" Width="100" Click="BtnAddCategory_Click" HorizontalAlignment="Right"/>
        </StackPanel>
        <DataGrid x:Name="CategoryDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" CellEditEnding="CategoryDataGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Parent Name" Binding="{Binding ParentName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="BtnDeleteCategory" Content="Delete Selected Category" Grid.Row="2" Width="150" HorizontalAlignment="Left" Margin="0,10,0,0" Click="BtnDeleteCategory_Click"/>
    </Grid>

</Window>
