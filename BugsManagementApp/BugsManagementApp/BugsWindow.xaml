<Window x:Class="BugsManagementApp.BugsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BugsManagementApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Bugs Window" Height="450" Width="800" Background="AliceBlue">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <Label Content="Title:"/>
                <TextBox x:Name="TitleTextBox" Width="150" Height="25" Margin="0,0,10,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Description:"/>
                <TextBox x:Name="DescriptionTextBox" Width="150" Height="25" Margin="0,0,10,0"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Status:"/>
                <ComboBox x:Name="StatusComboBox" Width="150" Height="25" Margin="0,0,10,0">
                    <ComboBoxItem Content="Open"/>
                    <ComboBoxItem Content="In Progress"/>
                    <ComboBoxItem Content="Closed"/>
                </ComboBox>
            </StackPanel>
            <Grid VerticalAlignment="Bottom">
                <Button x:Name="SelectCategoryButton" Content="Select Category" Width="150" Height="25"
                        Click="TogglePopup_Click" />
                <Popup x:Name="TreeViewPopup" StaysOpen="False" Placement="Bottom">
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5" Width="150">
                        <TreeView Name="TreeViewCategories" ItemsSource="{Binding}" SelectedItemChanged="TreeViewCategories_SelectedItemChanged">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding ChildCategories}">
                                    <TextBlock Text="{Binding Name}" />
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Border>
                </Popup>
            </Grid>
            <Button Name="BtnAddBug" VerticalAlignment="Bottom" Content="Add Bug" Width="100" Height="25" Margin="10,0,0,0" Click="BtnAddBug_Click"/>
        </StackPanel>
        <DataGrid x:Name="BugDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" CellEditEnding="BugDataGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bug ID" Binding="{Binding BugID}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="275"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="BtnDeleteBug" Content="Delete Selected Bug" Grid.Row="2" Width="150" HorizontalAlignment="Left" Margin="0,10,0,0" Click="BtnDeleteBug_Click"/>
    </Grid>

</Window>
